{
    "name": "CC1K--1f-pti2k",
    "n_gpu": 1,
    "arch": {
        "type": "FrozenInTime",
        "args": {
            "video_params": {
                "model": "SpaceTimeTransformer",
                "arch_config": "base_patch16_clip_224",
                "num_frames": 4,
                "pretrained": true,
                "time_init": "zeros"
            },
            "text_params": {
                "model": "distilbert-base-uncased",
                "pretrained": true,
                "input": "text"
            },
            "projection": "minimal",
            "load_checkpoint" : ""
        }
    },
    "data_loader":
            [
                {
                    "type": "TextVideoDataLoader",
                    "args":{
                        "dataset_name": "ConceptualCaptions3M",
                        "data_dir": "/home/t-zadurante/mnt/datasets_mnt/cc3m/images",
                        "shuffle": true,
                        "num_workers": 16,
                        "batch_size": 32,
                        "split": "train_1k",
                        "subsample": 1,
                        "text_params": {
                            "input": "text"
                        },
                        "video_params": {
                            "input_res": 224,
                            "num_frames": 1,
                            "loading": "lax"
                        }
                    }
                }
            ],
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 3e-5
        }
    },
    "loss": {
        "type": "NormSoftmaxLoss",
        "args": {
        }
    },
    "metrics": [
        "t2v_metrics",
        "v2t_metrics"
     ],
    "trainer": {
        "epochs": 101,
        "max_samples_per_epoch": 1000,
        "debugging": true,
        "save_dir": "/home/t-zadurante/mnt/video-llm",
        "save_period": 1000,
        "verbosity": 2,
        "monitor": "min val_loss_0",
        "early_stop": 10,
        "init_val": true,
        "neptune": false
    },
    "visualizer": {
        "type": ""
    }

}
