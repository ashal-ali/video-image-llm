{
    "name": "LiT--CC3M-WV10M",
    "n_gpu": 16,
    "strat": "ddp",
    "arch": {
        "type": "FrozenInTime",
        "args": {
            "video_params": {
                "model": "SpaceTimeTransformer",
                "arch_config": "base_patch16_clip_224",
                "vit_frozen": true,
                "num_frames": 4,
                "pretrained": true,
                "time_init": "zeros"
            },
            "text_params": {
                "model": "openai/clip-vit-base-patch16",
                "pretrained": true,
                "text_frozen": false,
                "input": "text"
            },
            "projection": "",
            "load_checkpoint" : ""
        }
    },
    "data_loader":
            [
                {
                    "type": "TextVideoDataLoader",
                    "args":{
                        "dataset_name": "ConceptualCaptions3M",
                        "data_dir": "/mnt/datasets_mnt/cc3m/final_split",
                        "reader": "cv2",
                        "shuffle": true,
                        "num_workers": 4,
                        "batch_size": 2,
                        "split": "train_1k",
                        "subsample": 1,
                        "text_params": {
                            "input": "text"
                        },
                        "video_params": {
                            "input_res": 224,
                            "num_frames": 1,
                            "loading": "lax"
                        }
                    }
                }
            ],
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 3e-5
        }
    },
    "loss": {
        "type": "NormSoftmaxLoss",
        "args": {
        }
    },
    "metrics": [
        "t2v_metrics",
        "v2t_metrics"
     ],
    "trainer": {
        "epochs": 10,
        "max_samples_per_epoch": 1000,
        "save_dir": "/mnt/datasets_mnt/output/LiT",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss_0",
        "early_stop": 50,
        "init_val": false,
        "neptune": false,
        "wandb": false
    },
    "visualizer": {
        "type": ""
    }

}
